    <style>
        .carousel {
            height: 500px !important;
            border-radius: 20px;
            overflow: hidden;
        }
        .carousel .carousel-item {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            text-align: center;
            padding: 60px 20px;
            color: #fff;
        }

        /* Gradient backgrounds */
        .carousel .blue { background: linear-gradient(135deg, #00c6ff, #0072ff); }
        .carousel .teal { background: linear-gradient(135deg, #11998e, #38ef7d); }
        .carousel .purple { background: linear-gradient(135deg, #8e2de2, #4a00e0); }
        .carousel .pink { background: linear-gradient(135deg, #ff416c, #ff4b2b); }

        /* Animations */
        .carousel h2 {
            font-weight: 700;
            animation: fadeInDown 1s ease;
        }
        .carousel p {
            font-size: 1.2rem;
            max-width: 600px;
            margin-top: 10px;
            animation: fadeInUp 1.2s ease;
        }

        /* Simple Review Card */
        .review-card {
            background: rgba(255, 255, 255, 0.15);
            backdrop-filter: blur(10px);
            padding: 25px;
            border-radius: 15px;
            margin-top: 20px;
            color: #fff;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
        }
        .zoom-card {
            transition: transform 0.4s ease, box-shadow 0.4s ease;
            border-radius: 15px;
            padding: 20px;
        }
        .zoom-card:hover{
            transform: scale(1.08);
            box-shadow: 0 12px 30px rbga(0,0,0,0.3);
            background: rbga(255,255,255,0.05);
        }
        /* footer at bottom */
        html, body {
            height: 100%;
            display: flex;
            flex-direction: column;
        }

        body {
            flex: 1 0 auto;
        }

        .page-footer {
            margin-top: auto;
        }

        @keyframes fadeInDown {
            from { opacity: 0; transform: translateY(-30px); }
            to { opacity: 1; transform: translateY(0); }
        }
        @keyframes fadeInUp {
            from { opacity: 0; transform: translateY(30px); }
            to { opacity: 1; transform: translateY(0); }
        }
    </style>
  </head>

