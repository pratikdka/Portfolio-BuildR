<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title><%= fullName %> - Portfolio</title>
  <link rel="stylesheet" href="/css/app.css" />
  <link rel="stylesheet" href="/css/theme.css" />
  <style>
    body {
      font-family: 'Segoe UI', sans-serif;
      margin: 0;
      padding: 2rem;
      background-color: #f3f3f3;
    }

    .portfolio-container {
      display: flex;
      max-width: 1000px;
      margin: auto;
      border-radius: 10px;
      overflow: hidden;
      box-shadow: 0 0 10px rgba(0,0,0,0.1);
    }

    .sidebar {
      padding: 2rem;
      width: 35%;
      text-align: center;
      border-right: 1px solid #ddd;
    }

    .profile-img {
      width: 130px;
      height: 130px;
      border-radius: 50%;
      object-fit: cover;
      margin-bottom: 1rem;
    }

    .content {
      padding: 2rem;
      width: 65%;
    }

    .section-title {
      font-weight: bold;
      margin-top: 1.5rem;
      margin-bottom: 0.5rem;
      color: #333;
    }

    .skills, .links {
      list-style: none;
      padding: 0;
      margin: 0.5rem 0;
    }

    .skills li {
      background: #e0e0e0;
      display: inline-block;
      margin: 5px;
      padding: 5px 10px;
      border-radius: 20px;
      font-size: 0.85rem;
    }

    a {
      text-decoration: none;
      color: #0066cc;
      font-weight: bold;
    }

    .footer {
      margin-top: 2rem;
      font-size: 0.9rem;
      color: #888;
    }

    .project-block {
      margin-bottom: 1.2rem;
    }

    .project-block h5 {
      margin: 0.3rem 0;
      color: #222;
    }

    .project-block p {
      margin: 0.2rem 0 0.8rem;
      color: #555;
    }

  @media print {
    .download-btn-container {
      display: none !important;
      visibility: hidden !important;
    }
  }

  @media print {
  body {
    zoom: 0.75; /* shrink content to fit */
    -webkit-print-color-adjust: exact !important;
  }

  .portfolio-container {
    page-break-inside: avoid;
    break-inside: avoid;
    max-height: 100vh;
    overflow: hidden;
  }

  @media print {
  .download-btn-container,
  .theme-selector {
    display: none !important;
    visibility: hidden !important;
  }
}

}

.download-btn-container {
  text-align: center;
  margin-top: 20px;
}

.download-btn {
  padding: 10px 20px;
  font-size: 1rem;
  border: none;
  border-radius: 6px;
  background-color: #4caf50;
  color: white;
  cursor: pointer;
  transition: background-color 0.3s ease;
}

.download-btn:hover {
  background-color: #388e3c;
}
  
</style>

</head>
<body>
  <div class="portfolio-container <%= theme || 'theme-light' %>">
    <div class="sidebar">
      <% if (image) { %>
        <img src="<%= image %>" alt="Profile Image" class="profile-img" />
      <% } else { %>
        <img src="/images/default-profile.png" alt="No Image" class="profile-img" />
      <% } %>

      <h3><%= fullName %></h3>
      <p><%= title %></p>

      <div class="section-title">Contact</div>
      <p><%= email %></p>

      <div class="section-title">Skills</div>
      <ul class="skills">
        <% skills.forEach(skill => { %>
          <li><%= skill.trim() %></li>
        <% }) %>
      </ul>

      <div class="section-title">Links</div>
      <p>
        <a href="<%= github %>" target="_blank">GitHub</a> |
        <a href="<%= linkedin %>" target="_blank">LinkedIn</a>
      </p>
    </div>

    <div class="content">
      <h2><%= fullName %></h2>
      <h4><%= title %></h4>

      <div class="section-title">About Me</div>
      <p><%= bio %></p>

      <div class="section-title">Projects</div>
      <% if (projects && projects.length > 0) { %>
        <% projects.forEach(project => { %>
          <div class="project-block">
            <h5><%= project.title %></h5>
            <p><%= project.description %></p>
          </div>
        <% }) %>
      <% } else { %>
        <p>No projects added.</p>
      <% } %>

      </div>
    </div>

    <!-- THEME SELECTOR -->
    <div class="theme-selector" style="text-align:center; margin: 20px;">
        <label for="theme">ðŸŽ¨ Select Theme:</label>
          <select id="theme">
            <option value="theme-light">Light</option>
            <option value="theme-dark">Dark</option>
            <option value="theme-blue">Blue</option>
            <option value="theme-green">Green</option>
            <option value="theme-purple">Purple</option>
          </select>
    </div>

    <!-- DOWNLOAD BUTTON SECTION -->
    <div class="download-btn-container">
        <form action="/download" method="POST">
          <input type="hidden" name="fullName" value="<%= fullName %>">
          <input type="hidden" name="title" value="<%= title %>">
          <input type="hidden" name="email" value="<%= email %>">
          <input type="hidden" name="bio" value="<%= bio %>">
          <input type="hidden" name="github" value="<%= github %>">
          <input type="hidden" name="linkedin" value="<%= linkedin %>">
          <input type="hidden" name="image" value="<%= image %>">
          <% skills.forEach(skill => { %>
          <input type="hidden" name="skills[]" value="<%= skill %>">
          <% }); %>
          <% projects.forEach(project => { %>
          <input type="hidden" name="projects[]" value='<%- JSON.stringify(project) %>'>
          <% }); %>
          <input type="hidden" id="selectedTheme" name="theme" value="<%= theme || 'theme-light' %>">
          <button type="submit" class="download-btn">Download as PDF</button>
        </form>
    </div>
  </div>
    <script src="/js/themeSelector.js"></script>
</body>
</html>
